        {% endif %}


        {% if hacker %}
        <div class='info_block'>
        <h3 class='site_name'>{{ hacker.site }}:</h3>
        {% if hacker.empty %}
            <p>{{ hacker.empty }}</p>
        {% endif %}
        {% if hacker.about %}
            <p><span class='bold'>Bio:</span> {{ hacker.about }}</p>
            <p><a href="{{ hacker.url }}">Hackernews profile</a></p>
        {% endif %}
        </div>
        {% endif %}


        {% if wiki %}
        <div class='info_block'>
        <h3 class='site_name'>{{ wiki.site }}:</h3>
        {% if wiki.empty %}
            <p>{{ wiki.empty }}</p>
        {% endif %}
        {% if wiki.url %}
            <p><a href="{{ wiki.url }}">Wikipedia profile</a></p>
        {% endif %}
        </div>
        {% endif %}


        {% if pwned %}
        <div class='info_block'>
        <h3 class='site_name'>{{ pwned.site }}:</h3>
        {% if pwned.empty %}
            <p>{{ pwned.empty }}</p>
        {% endif %}
        {% if pwned.results %}
        {% for pwn in pwned.results %}
            <p><span class='bold'>Breach:</span> {{ pwn.Title }}</p>
            <p><span class='bold'>Data types compromised:</span> {{ pwn.DataClasses }}</p>
            {% if pwn.Domain %}
            <p><span class='bold'>Domain:</span> {{ pwn.Domain }}</p>
            {% endif %}
            <p><span class='bold'>Breach date:</span> {{ pwn.BreachDate }}</p>
            <br>
        {% endfor %}
        {% endif %}
        </div>
        {% endif %}


    
        {% if hacked_emails %}
        <div class='info_block'>
        <h3 class='site_name'>{{ hacked_emails.site }}:</h3>
        {% if hacked_emails.empty %}
            <p>{{ hacked_emails.empty }}</p>
        {% endif %}
        {% if hacked_emails.hack_dict %}
            {% for hack in hacked_emails.hack_dict['data'] %}
                <p><span class='bold'>Breach:</span> {{ hack.title }}</p>
                <p><span class='bold'>Breach date:</span> {{ hack.date_leaked[:10] }}</p>
                <br>
            {% endfor %}
        {% endif %}
        </div>
        {% endif %}

    </div>
</div>
{% endblock content %}
