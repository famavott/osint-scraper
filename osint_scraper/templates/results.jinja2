        {% if pwned %}
        <div class='info_block'>
        <h3 class='site_name'>{{ pwned.site }}:</h3>
        {% if pwned.empty %}
            <p>{{ pwned.empty }}</p>
        {% endif %}
        {% if pwned.results %}
        {% for pwn in pwned.results %}
            <p><span class='bold'>Breach:</span> {{ pwn.Title }}</p>
            <p><span class='bold'>Data types compromised:</span> {{ pwn.DataClasses }}</p>
            {% if pwn.Domain %}
            <p><span class='bold'>Domain:</span> {{ pwn.Domain }}</p>
            {% endif %}
            <p><span class='bold'>Breach date:</span> {{ pwn.BreachDate }}</p>
            <br>
        {% endfor %}
        {% endif %}
        </div>
        {% endif %}


    
        {% if hacked_email %}
        <div class='info_block'>
        <h3 class='site_name'>{{ hacked_email.site }}:</h3>
        {% if hacked_email.empty %}
            <p>{{ hacked_email.empty }}</p>
        {% endif %}
        {% if hacked_email.hack_dict %}
            {% for hack in hacked_email.hack_dict['data'] %}
                <p><span class='bold'>Breach:</span> {{ hack.title }}</p>
                <p><span class='bold'>Breach date:</span> {{ hack.date_leaked[:10] }}</p>
                <br>
            {% endfor %}
        {% endif %}
        </div>
        {% endif %}

    </div>
</div>
