{% extends "layout.jinja2" %}

{% block content %}
<div class="content">
        <a href="{{ request.route_url('home') }}" id='home_link'>Return to homepage</a>
    <div id='page'>
    <h1 id='results_header'>Search results:</h1>

        {% if facebook %}
        <div class='info_block'>
        <h3 class='site_name'>{{ facebook.site }}:</h3>
        {% if facebook.empty %}
            <p>{{ facebook.empty }}</p>
        {% endif %}
        {% if facebook.url %}
            <p><a href="{{ facebook.url }}">Potential Facebook profile</a></p>
        {% endif %}
        </div>
        {% endif %}



        {% if twitter %}
        <div class='info_block'>
        <h3 class='site_name'>{{ twitter.site }}:</h3>
        {% if twitter.empty %}
            <p>{{ twitter.empty }}</p>
        {% endif %}
        {% if twitter.avatar %}
            <img src="{{ twitter.avatar }}">
        {% endif %}
        {% if twitter.name %}
            <p><span class='bold'>Name:</span>{{ twitter.name }}</p>
        {% endif %}
        {% if twitter.location %}
            <p><span class='bold'>Location:</span>{{ twitter.location }}</p>
        {% endif %}
        {% if twitter.description %}
            <p><span class='bold'>Bio:</span>{{ twitter.description }}</p>
        {% endif %}
        {% if twitter.created_at %}
            <p><span class='bold'>User Since:</span>{{ twitter.created_at }}</p>
        {% endif %}
        {% if twitter.recent_tweet %}
            <p><span class='bold'>Last Tweet:</span>{{ twitter.recent_tweet }}</p>
        {% endif %}
        {% if twitter.url %}
            <p><a href="{{ twitter.url }}">Twitter profile</a></p>
        {% endif %}
        </div>
        {% endif %}


        {% if youtube %}
            <div class='info_block'>
            <h3 class='site_name'>{{ youtube.site }}:</h3>
            {% if youtube.empty %}
                <p>{{ youtube.empty }}</p>
            {% endif %}
            {% if youtube.avatar %}
                <img src="{{ youtube.avatar }}">
                <p><span class='bold'>Name:</span> {{ youtube.title }}</p>
                <p><a href="{{ youtube.url }}">YouTube profile</a></p>
            {% endif %}
            </div>
        {% endif %}


        {% if liveleak %}
        <div class='info_block'>
        <h3 class='site_name'>{{ liveleak.site }}:</h3>
        {% if liveleak.empty %}
            <p>{{ liveleak.empty }}</p>
        {% endif %}
        {% if liveleak.location %}
            <p><span class='bold'>Location:</span> {{ liveleak.location }}</p>
            <p><span class='bold'>Member since:</span> {{ liveleak.memb_since }}</p>
            <p><a href="{{ liveleak.url }}">LiveLeak profile</a></p>
        {% endif %}
        </div>
        {% endif %}


        {% if reddit %}
            <div class='info_block'>
            <h3 class='site_name'>{{ reddit.site }}:</h3>
            {% if reddit.empty %}
                <p>{{ reddit.empty }}</p>
            {% endif %}

            {% if reddit.url %}
                <p><a href="{{ reddit.url }}">Reddit profile</a></p>
                <p><span class='bold'>Account age:</span> {{ reddit.age }}</p>
                {% if reddit.sub_list %}
                    <p><span class='bold'>Last active subreddits: </span>{{ reddit.sub_list }}</p>
                {% endif %}
            {% endif %}
            
            </div>
        {% endif %}


