{% extends "layout.jinja2" %}

{% block content %}
<div class="content">
        <a href="{{ request.route_url('home') }}"><input id='submit_button' type="submit" name="home" value="Home"></a>
    <h1>Search results</h1>

        {% if facebook %}
        <div id='info_block'>
        <h3>{{ facebook.site }}:</h3>
        {% if facebook.empty %}
            <p>{{ facebook.empty }}</p>
        {% endif %}
        {% if facebook.url %}
            <p>{{ facebook.url }}</p>
        {% endif %}
        </div>
        {% endif %}



        {% if twit %}
        <div id='info_block'>
        <h3>{{ twit.site }}:</h3>
        {% if twit.empty %}
            <p>{{ twit.empty }}</p>
        {% endif %}
        {% if twit.results %}
            <img src="{{ twit.results.profile_image_url }}" height="50px" width="50px">
            <p>{{ twit.results.screen_name }}</p>
            <p>{{ twit.results.name }}</p>
            <p>{{ twit.results.location }}</p>
            <p>{{ twit.results.lang }}</p>
            <p>{{ twit.results.description }}</p>
            <p>{{ twit.results.created_at }}</p>
            <p>{{ twit.results.followers_count }}</p>
            <p>{{ twit.results.friend_count }}</p>
        {% endif %}
        </div>
        {% endif %}


        {% if yout %}
            <div id='info_block'>
            <h3>{{ yout.site }}:</h3>
            {% if yout.empty %}
                <p>{{ yout.empty }}</p>
            {% endif %}
            {% if yout.avatar %}
                <img src="{{ yout.avatar }}" height="50px" width="50px">
                <p>{{ yout.title }}</p>
                <p>{{ yout.url }}</p>
            {% endif %}
            </div>
        {% endif %}


        {% if lleak %}
        <div id='info_block'>
        <h3>{{ lleak.site }}:</h3>
        {% if lleak.empty %}
            <p>{{ lleak.empty }}</p>
        {% endif %}
        {% if lleak.location %}
            <p>{{ lleak.location }}</p>
            <p>{{ lleak.memb_since }}</p>
            <p><a href="{{ lleak.url }}">LiveLeak profile</a></p>
        {% endif %}
        </div>
        {% endif %}


        {% if reddit %}
            <div id='info_block'>
            <h3>{{ reddit.site }}:</h3>
            {% if reddit.empty %}
                <p>{{ reddit.empty }}</p>
            {% endif %}
            {% if reddit.url %}
                <p><a href="{{ reddit.url }}">LiveLeak profile</a></p>
                <p>{{ reddit.sub_list }}</p>
                <p>{{ reddit.age }}</p>
            {% endif %}
            </div>
        {% endif %}


        {% if ghuser %}
        <div id='info_block'>
        <h3>{{ ghuser.site }}:</h3>
        {% if ghuser.empty %}
            <p>{{ ghuser.empty }}</p>
        {% endif %}
        {% if ghuser.results %}
            <img src="{{ ghuser.results.avatar_url }}" height="50px" width="50px">
            <p>{{ ghuser.results.login }}</p>
            <p>{{ ghuser.results.name }}</p>
            <p>{{ ghuser.results.email }}</p>
            <p>{{ ghuser.results.company }}</p>
            <p>{{ ghuser.results.hirable }}</p>
            <p>{{ ghuser.results.location }}</p>
            <p>{{ ghuser.results.bio }}</p>
            <p>{{ ghuser.results.blog }}</p>
            <p>{{ ghuser.results.repos_url }}</p>
            <a href="{{ ghuser.results.html_url }}">GitHub profile</a>
        {% endif %}
        </div>
        {% endif %}
        

        {% if steam %}
        <div id='info_block'>
        <h3>{{ steam.site }}:</h3>
        {% if steam.empty %}
            <p>{{ steam.empty }}</p>
        {% endif %}
        {% if steam.location %}
            <img src="{{ steam.avatar }}" height="50px" width="50px">
            <p>{{ steam.real_name }}</p>
            <p>{{ steam.bio }}</p>
            <p>{{ steam.location }}</p>
        {% endif %}
        </div>
        {% endif %}


        {% if imgur %}
        <div id='info_block'>
        <h3>{{ imgur.site }}:</h3>
        {% if imgur.empty %}
            <p>{{ imgur.empty }}</p>
        {% endif %}
        {% if imgur.url %}
            <p>{{ imgur.bio }}</p>
            <a href="{{ imgur.url }}">Imgur profile</a>
            <p>{{ imgur.acct_date }}</p>
        {% endif %}
        </div>
        {% endif %}


        {% if p_bucket %}
        <div id='info_block'>
        <h3>{{ p_bucket.site }}:</h3>
        {% if p_bucket.empty %}
            <p>{{ p_bucket.empty }}</p>
        {% endif %}
        {% if p_bucket.url %}
            <img src="{{ p_bucket.avatar }}" height="50px" width="50px">
            <p>{{ p_bucket.bio }}</p>
            <a href="{{ p_bucket.url }}">Photobucket profile</a>
        {% endif %}
        </div>
        {% endif %}


        {% if flickr %}
        <div id='info_block'>
        <h3>{{ flickr.site }}:</h3>
        {% if flickr.empty %}
            <p>{{ flickr.empty }}</p>
        {% endif %}
        {% if flickr.avatar %}
            <img src="{{ flickr.avatar }}" height="50px" width="50px">
            <p>{{ flickr.user_name }}</p>
            <p>{{ flickr.title }}</p>
            <p>{{ flickr.location }}</p>
            <a href="{{ flickr.url }}">Flickr profile</a>
        {% endif %}
        </div>
        {% endif %}


        {% if hacker %}
        <div id='info_block'>
        <h3>{{ hacker.site }}:</h3>
        {% if hacker.empty %}
            <p>{{ hacker.empty }}</p>
        {% endif %}
        {% if hacker.about %}
            <p>{{ hacker.about }}</p>
            <a href="{{ hacker.url }}">Hackernews profile</a>
        {% endif %}
        </div>
        {% endif %}


        {% if wiki %}
        <div id='info_block'>
        <h3>{{ wiki.site }}:</h3>
        {% if wiki.empty %}
            <p>{{ wiki.empty }}</p>
        {% endif %}
        {% if wiki.url %}
            <a href="{{ wiki.url }}">Wikipedia profile</a>
        {% endif %}
        </div>
        {% endif %}


        {% if pwned %}
        <div id='info_block'>
        <h3>Have you been pwned:</h3>
        {% for pwn in pwned.results %}
            <p>{{ pwn.Name }}</p>
            <p>{{ pwn.DataClasses }}</p>
            <p>{{ pwn.Description }}</p>
            <p>{{ pwn.BreachDate }}</p>
        {% endfor %}
        </div>
        {% endif %}



        {% if hacked_emails %}
        <div id='info_block'>
        <h3>{{ hacked_emails.site }}:</h3>
        {% if hacked_emails.empty %}
            <p>{{ hacked_emails.empty }}</p>
        {% endif %}
        {% if hacked_emails.hack_dict %}
            {% for hack in hacked_emails.hack_dict['data'] %}
                <p>{{ hack.title }}</p>
                <p>{{ hack.date_leaked }}</p>
            {% endfor %}
        {% endif %}
        </div>
        {% endif %}


</div>
{% endblock content %}
