            <p><a href="{{ p_bucket.url }}">Photobucket profile</a></p>
        {% endif %}
        </div>
        {% endif %}


        {% if flickr %}
        <div class='info_block'>
        <h3 class='site_name'>{{ flickr.site }}:</h3>
        {% if flickr.empty %}
            <p>{{ flickr.empty }}</p>
        {% endif %}
        {% if flickr.avatar %}
            <img src="{{ flickr.avatar }}">
            <p><span class='bold'>Username:</span> {{ flickr.user_name }}</p>
            <p><span class='bold'>Name:</span> {{ flickr.title }}</p>
            <p><span class='bold'>Location:</span> {{ flickr.location }}</p>
            <p><a href="{{ flickr.url }}">Flickr profile</a></p>
        {% endif %}
