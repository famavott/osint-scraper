        {% if github.name %}
            <img src="{{ github.avatar_url }}">
            <p><span class='bold'>Username:</span> {{ github.login }}</p>
            <p><span class='bold'>Name:</span> {{ github.name }}</p>
            <p><span class='bold'>Location:</span> {{ github.location }}</p>
            {% if github.bio %}
